{
  "compilerOptions": {
    "target": "ES2015", // Supports private identifiers
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true, // Allows default import of CommonJS modules
    "skipLibCheck": true,    // Skips checking type definitions for node_modules
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
